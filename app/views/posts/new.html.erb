<h1>New Post!</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
       <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
    <br>
    <br>
    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>
    <br>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f .submit %>
<% end %>